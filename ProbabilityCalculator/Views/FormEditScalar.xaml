<Window x:Class="ProbabilityCalculator.Views.FormEditScalar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProbabilityCalculator.Views"
        mc:Ignorable="d"
        Title="Scalar Editor" Height="200" Width="400">
    <Grid>
        <TextBox Name="NumericValue" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,64,0,0"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="173,92,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Value" HorizontalAlignment="Left" Margin="78,60,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
