<Window x:Class="ProbabilityCalculator.Views.FormEditRandomQuantity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProbabilityCalculator.Views"
        mc:Ignorable="d"
        Title="FormEditRandomQuantity" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="434*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="RandomQuantityDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Random quantity realization" Binding="{Binding Key}"></DataGridTextColumn>
                <DataGridTextColumn Header="Probability of realization" Binding="{Binding Value}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
